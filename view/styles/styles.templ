package styles

templ BlogStyle() {
    <style>
        h1 {
            color: #d164a9;
            font-size: 2.25rem;
            line-height: 3rem;
        }

        h2 {
            color: #4b4599;
            font-size: 2rem;
            line-height: 2.5rem;
        }

        h1, h2 {
            margin-top: 10px;
            margin-bottom: 7px;
        }

        p, li {
            font-family: "Open Sans";
            margin-top: 2px;
            margin-bottom: 2px;
        }

        blockquote {
            background-color: #eee8f4;
            padding: 0px;
        }

        p, li {
            padding: 5px;
        }

        ul, ol {
            padding-left: 45px;
        }

        ul {
            list-style-type: disc;
        }

        ol {
            list-style-type: decimal;
        }

        @media (prefers-color-scheme: dark) {
            p, li {
                color: white;
            }
            blockquote {
                background-color: #0f172a;
            }
            hr {
                background-color: black;
            }
        }
    </style>
}